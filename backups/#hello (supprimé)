# âš™ï¸ CLASSE DU COG : HelloCommand
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
class HelloCommand(commands.Cog):
    def __init__(self, bot: commands.Bot):
        """
        Initialise le cog avec le bot en paramÃ¨tre.
        """
        self.bot = bot

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ’¬ COMMANDE !hello
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    @commands.command(
        name="hello",
        help="Affiche un message de bienvenue alÃ©atoire."
    )
    @commands.cooldown(rate=1, per=3, type=commands.BucketType.user)
    async def hello(self, ctx: commands.Context):
        """
        Envoie un message choisi alÃ©atoirement depuis un fichier JSON.
        Si le fichier est manquant ou invalide, un message par dÃ©faut est envoyÃ©.
        """
        try:
            # ğŸ“ CHEMIN VERS LE FICHIER DE DONNÃ‰ES
            with open("data/hello_messages.json", "r", encoding="utf-8") as f:
                data = json.load(f)
                messages = data.get("messages", [])  # ğŸ” Extraction de la clÃ© "messages"

            # ğŸ² ENVOI Dâ€™UN MESSAGE ALÃ‰ATOIRE
            if messages:
                await ctx.send(random.choice(messages))
            else:
                await ctx.send("ğŸ‘‹ Hello, je suis en ligne (mais sans message personnalisÃ©) !")

        # ğŸš¨ ERREURS GÃ‰RÃ‰ES AVEC PRÃ‰CISION
        except FileNotFoundError:
            await ctx.send("âŒ Le fichier `hello_messages.json` est introuvable dans le dossier `data/`.")
        except json.JSONDecodeError:
            await ctx.send("âŒ Erreur de syntaxe dans `hello_messages.json` (JSON malformÃ©).")

    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    # ğŸ·ï¸ ATTRIBUTION MANUELLE DE LA CATÃ‰GORIE
    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    def cog_load(self):
        """
        Fonction spÃ©ciale appelÃ©e automatiquement Ã  lâ€™ajout du cog.
        On sâ€™en sert ici pour attribuer dynamiquement une catÃ©gorie.
        """
        self.hello.category = "GÃ©nÃ©ral"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ”Œ SETUP DU COG
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
async def setup(bot: commands.Bot):
    """
    Fonction de setup utilisÃ©e par Discord.py pour charger ce module.
    Elle ajoute le cog au bot.
    """
    await bot.add_cog(HelloCommand(bot))
    print("âœ… Cog chargÃ© : HelloCommand (catÃ©gorie = GÃ©nÃ©ral)")
