# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
import random
import discord
from discord.ext import commands

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ðŸŽ›ï¸ Cog principal : commande !couleur
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
class CouleurCommand(commands.Cog):
    """
    Commande !couleur â€” GÃ©nÃ¨re et affiche une couleur alÃ©atoire avec codes HEX et RGB
    """

    def __init__(self, bot: commands.Bot):
        self.bot = bot

    @commands.command(
        name="couleur",
        help="ðŸŽ¨ Affiche une couleur alÃ©atoire avec ses codes HEX et RGB."
    )
    @commands.cooldown(rate=1, per=3, type=commands.BucketType.user)
    async def couleur(self, ctx: commands.Context):
        """Commande principale gÃ©nÃ©rant une couleur unique."""

        # GÃ©nÃ©ration d'un code HEX alÃ©atoire (entier 0x000000 Ã  0xFFFFFF)
        code_hex = random.randint(0, 0xFFFFFF)
        hex_str = f"#{code_hex:06X}"  # Exemple : #1A2B3C

        # Conversion HEX -> RGB
        r = (code_hex >> 16) & 0xFF
        g = (code_hex >> 8) & 0xFF
        b = code_hex & 0xFF
        rgb_str = f"({r}, {g}, {b})"

        # URL image couleur gÃ©nÃ©rÃ©e dynamiquement
        image_url = f"https://dummyimage.com/700x200/{code_hex:06x}/{code_hex:06x}.png&text=+"

        # CrÃ©ation de l'embed Discord avec couleur en fond
        embed = discord.Embed(
            title="ðŸŒˆ Couleur alÃ©atoire",
            description=(
                f"ðŸ”¹ **Code HEX** : `{hex_str}`\n"
                f"ðŸ”¸ **Code RGB** : `{rgb_str}`"
            ),
            color=code_hex
        )

        embed.set_image(url=image_url)
        embed.timestamp = ctx.message.created_at

        await ctx.send(embed=embed)

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ðŸ”Œ Setup du Cog
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
async def setup(bot: commands.Bot):
    cog = CouleurCommand(bot)
    for command in cog.get_commands():
        command.category = "Fun"
    await bot.a
dd_cog(cog)
